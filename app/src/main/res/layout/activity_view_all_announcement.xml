<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAllAnnouncementActivity">

    <TextView
        android:id="@+id/tv_back_to_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/crl_light_blue"
        android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="All Announcements"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/announcement_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_back_to_Home" />

    <TextView
        android:id="@+id/tv_no_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Record Found"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />


</RelativeLayout>